<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>no.kantega.security.api.impl</groupId>
    <artifactId>securityapi-impl</artifactId>
    <packaging>pom</packaging>
    <version>2.11-SNAPSHOT</version>
    <name>Implementation of security-api</name>
    <url>http://kantega.no</url>
    <scm>
        <connection>scm:svn:https://subversion.kantega.no/svn/aksess/projects/security-api-impl/trunk/</connection>
    </scm>

    <dependencies>

        <dependency>
            <groupId>org.kantega.security-api</groupId>
            <artifactId>security-api</artifactId>
            <version>${securityapi.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.9</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>maven.org</id>
            <url>http://repo1.maven.org/maven/</url>
        </repository>
        <repository>
            <id>subversion</id>
            <name>Kantega Maven Repository</name>
            <url>http://maven.mogul.no/maven2/external</url>
        </repository>
        <repository>
            <id>subversioninternal</id>
            <name>Kantega Internal Maven Repository</name>
            <url>http://maven.mogul.no/maven2/internal</url>
        </repository>

        <repository>
            <id>subversion2</id>
            <name>Kantega Maven Legacy Repository</name>
            <url>http://maven.mogul.no/maven/</url>
            <layout>legacy</layout>
        </repository>

    </repositories>

    <distributionManagement>
        <repository>
            <id>subversion</id>
            <name>subversion.kantega.no</name>
            <url>scpexe://subversion.kantega.no/var/www/html/maven2/internal/</url>
        </repository>

        <site>
            <id>maven</id>
            <name>Aksess website</name>
            <url>scpexe://subversion.kantega.no/var/www/html/aksess/security-api-impl</url>
        </site>
    </distributionManagement>

    <pluginRepositories>
        <pluginRepository>
            <id>subversion</id>
            <url>http://subversion.kantega.no/maven2/external</url>
        </pluginRepository>
    </pluginRepositories>

    <modules>
        <module>fedag-identity</module>
        <module>feide-identity</module>
        <module>ksi-signature</module>
        <module>ldap</module>
        <module>webapp</module>
        <module>xmluser</module>
        <module>ntlm-identity</module>
        <module>dbsession-identity</module>
        <module>securityapi-ntlm-webapp</module>
    <module>securityapi-kerberos</module>
    <module>securityapi-md5crypt</module>
  </modules>

    <properties>
        <springframework.version>2.5.5</springframework.version>
        <securityapi.version>1.10</securityapi.version>
        <securityapi.openimpl.version>1.1</securityapi.openimpl.version>
        <aksess.version>5.17pre2</aksess.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.0-beta-9</version>
                <configuration>
                    <remoteTagging>true</remoteTagging>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <goals>deploy</goals>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>