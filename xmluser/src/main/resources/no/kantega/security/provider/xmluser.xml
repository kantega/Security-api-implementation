<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- XMLUser configuration -->
    <bean id="xmlUserConfigurable" abstract="true">
        <property name="xmlUsersFilename">
            <value>${security.xmluser.userrolefile}</value>
        </property>
        <property name="domain">
            <value>${security.xmluser.domain}</value>
        </property>
    </bean>


    <bean id="xmluserProfileManager" class="no.kantega.security.api.impl.xmluser.profile.XMLUserProfileManager" parent="xmlUserConfigurable">
    </bean>

    <bean id="xmluserRoleManager" class="no.kantega.security.api.impl.xmluser.role.XMLUserRoleManager" parent="xmlUserConfigurable">
    </bean>

    <bean id="xmluserPasswordManager" class="no.kantega.security.api.impl.xmluser.password.XMLUserPasswordManager" parent="xmlUserConfigurable">
    </bean>

    <bean id="xmluserIdentityResolver" class="no.kantega.security.api.identity.DefaultIdentityResolver">
        <property name="authenticationContext">
            <value>${security.xmluser.domain}</value>
        </property>
        <property name="loginPageUrl">
            <value>${security.login.url}</value>
        </property>
    </bean>

    <bean id="xmluserRealm" class="no.kantega.publishing.security.realm.SecurityRealm">
        <property name="profileManager">
            <ref bean="xmluserProfileManager"/>
        </property>
        <property name="roleManager">
            <ref bean="xmluserRoleManager"/>
        </property>
        <property name="passwordManager">
            <ref bean="xmluserPasswordManager"/>
        </property>
        <property name="identityResolver">
            <ref bean="xmluserIdentityResolver"/>
        </property>
    </bean>
</beans>